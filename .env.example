# .env file to customize versions, ports and data directories

# Versions (use "latest" or a specific version)
BITCOIN_VERSION=26.2
LND_VERSION=v0.18.3-beta
ELECTRS_VERSION=v0.9.21
THUNDERHUB_VERSION=v0.13.7
MEMPOOL_BACKEND_VERSION=latest
MEMPOOL_FRONTEND_VERSION=latest

# Network
NETWORK=mainnet   # mainnet | testnet | signet | regtest

# Ports/ZMQ/RPC
BITCOIN_RPC_PORT=8332
BITCOIN_P2P_PORT=8333
ZMQ_RAWBLOCK=28332
ZMQ_RAWTX=28333

# RPC auth (for tools like LND / Mempool)
BITCOIN_RPC_USER=btcuser
BITCOIN_RPC_PASSWORD=btcpwd-strong-change-me

# Web services
THUNDERHUB_PORT=3000
MEMPOOL_BACKEND_PORT=4080
USE_NGINX=false   # true/false for reverse proxy

# -----------------------------
# Data directories (defaults)
# -----------------------------
BITCOIN_DATA_DIR=/data/bitcoin
LND_DATA_DIR=/data/lnd
ELECTRS_DATA_DIR=/data/electrs
MEMPOOL_DATA_DIR=/data/mempool

# -----------------------------
# Bitcoin prune/full mode
# -----------------------------
# Prune choice is asked interactively during '10-bitcoin-core.sh'.
# If you want to preseed values (skip prompts), you MAY export:
#   USE_PRUNE=true
#   PRUNE_GB=100
# (leave them undefined to get interactive questions)

